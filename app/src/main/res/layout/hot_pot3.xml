<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_margin="100dp"
        android:background="@color/Vermillion"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Types of HotPot"
        android:textColor="#FFEA00"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="342dp"
        android:text="Choose your favourites spot to eat hotpot"
        android:textColor="@color/Ruddy_Brown"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:background="@color/Jazzberry_Jam"
        android:text="1. Haidi Lao Hotpot"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="205dp"
        android:layout_height="78dp"
        android:layout_marginTop="4dp"
        android:text="@string/Haidi"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="203dp"
        android:layout_height="198dp"
        android:scaleType="fitXY"
        android:src="@drawable/haidao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        app:srcCompat="@drawable/haidao" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="204dp"
        android:layout_height="31dp"
        android:background="@color/Ruddy_Brown"
        android:text="2. Huangcheng Laoma"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="201dp"
        android:layout_height="79dp"
        android:layout_marginTop="4dp"
        android:text="@string/Huangcheng"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/textView32"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="203dp"
        android:layout_height="195dp"
        android:layout_marginTop="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/huangcheng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/textView38"
        app:srcCompat="@drawable/huangcheng"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="203dp"
        android:layout_height="24dp"
        android:layout_marginTop="3dp"
        android:background="@color/Olive_Green"
        android:gravity="center_horizontal"
        android:text="3. Tan's Fish Head "
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="202dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:text="@string/Tan_fish"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/tan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView40"
        app:srcCompat="@drawable/tan" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="204dp"
        android:layout_height="28dp"
        android:background="@color/Malachite"
        android:gravity="center_horizontal"
        android:text="4. Little sheep Hotpot"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView39"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="206dp"
        android:layout_height="64dp"
        android:text="Little Sheep, Chinese name:小肥羊火锅 founded in 1999 in Baotou, Inner Mongolia, specializing in mutton/lamb hotpot restaurants, has over 300 chain restaurants in China."
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/textView41"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="208dp"
        android:layout_height="151dp"
        android:scaleType="fitXY"
        android:src="@drawable/little_sheep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/textView42"
        app:srcCompat="@drawable/little_sheep" />


</androidx.constraintlayout.widget.ConstraintLayout>